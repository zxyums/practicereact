import _ from "lodash";

const getExcelColumnName = (num) => {
  if (num < 1) return "Invalid Input";

  return _.times(Math.ceil(num / 26), () => {
    const remainder = (num - 1) % 26;
    const char = String.fromCharCode(65 + remainder);
    num = Math.floor((num - 1) / 26);
    return char;
  })
    .reverse()
    .join("");
};

// Example usage
console.log(getExcelColumnName(1)); // A
console.log(getExcelColumnName(28)); // AB
console.log(getExcelColumnName(703)); // AAA