{
  field: 'fileUploadedDt',
  headerName: 'File Uploaded Date (UTC)',
  sortable: true,
  minWidth: 220,
  width: 220,

  // Ensure the date is stored and used as a Date object
  valueGetter: (params) => params.data?.fileUploadedDt ? new Date(params.data.fileUploadedDt) : null,

  // Display Date in UTC format (YYYY-MM-DD HH:mm:ss UTC)
  valueFormatter: (params) => {
    if (!params.value) return '';
    const utcDate = new Date(params.value);
    return utcDate.toISOString().replace('T', ' ').split('.')[0] + ' UTC';
  },

  // Show local browser time zone on hover dynamically
  cellRenderer: (params) => {
    if (!params.value) return '';

    const utcDate = new Date(params.value);
    const localDate = utcDate.toLocaleString(undefined, {
      day: '2-digit',
      month: 'short',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit',
      timeZoneName: 'short',
    });

    return `<div title="Local Time: ${localDate}">${params.valueFormatter(params)}</div>`;
  }
}